<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>

  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5]%>


  <%= f.button :submit, class: "btn btn-outline-primary" %>

  <% end %>
<p class="btn btn-outline-primary" ><%= link_to "Back to home", restaurants_path%></p>
